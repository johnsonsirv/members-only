<h1>Login</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
		<%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :username, "Username" %>
      <%= f.email_field :username, class: 'form-control', placeholder: "Enter Username" %>

      <%= f.label :password, "Password", placeholder: "Enter Password" %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.submit "Log in", class: "btn btn-primary", title: "Log in" %>
    <% end %>

    <p>Don't have an account? <%= link_to "Sign up now!", signup_path %></p>
	</div>
</div>

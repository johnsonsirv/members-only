<div class="row">
	<h1>New Post</h1>
	
	<%= form_for(@post) do |f| %>
			<%= render 'shared/post_messages' %>
			<%= f.label :title, "Title" %>
			<%= f.text_field :title, placeholder: "Title" %>
			<%= f.label :body, "Body" %>
			<%= f.text_area :body, placeholder: "Post content" %>

			<%= f.submit "Add Post", class: "btn btn-primary", title: "Add Post" %>
	<% end %>
</div>


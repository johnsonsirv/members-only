<h3>Signup Here</h3>
<%= form_for(@user) do |f| %>
	 <%= f.label :username %>
		<%= f.text_field :username %>

		<%= f.label :email %>
		<%= f.email_field :email %>

		<%= f.label :password_digest %>
		<%= f.password_field :password_digest %>

		<%= f.label :confirm_password %>
		<%= f.password_field :confirm_password %>
		
		<%= f.submit "Signup", class: "btn btn-primary" %>
<% end %>